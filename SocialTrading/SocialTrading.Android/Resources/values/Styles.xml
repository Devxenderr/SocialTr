<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="AppTheme.Base"
         />
  <style name="AppTheme.Base" parent="Theme.AppCompat">
    <!-- colorPrimary is used for the default action bar background --><!--
    <item name="colorPrimary">@color/colorPrimary</item>
    --><!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/StatusBarColor</item>
    <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets --><!--
    <item name="colorAccent">@color/colorAccent</item>-->
  </style>

  <style name="SearchTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:textColorHint">@color/Black</item>
  </style>


  <style name="NoTitleTheme" parent="AppTheme.Base">
    <item name="windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
  </style>

  <style name="MyTheme.Splash" parent="android:Theme.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="CreatePostTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColor">@color/Black</item>
  </style>

  <style name="RegBackImageButton">
    <item name="android:layout_width">36dp</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginTop">30dp</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:layout_alignParentStart">true</item>
    <item name="android:background">@color/Transparent</item>
  </style>

  <style name="LogoImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/logoImageViewHeight</item>
    <item name="android:layout_marginTop">45dp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="FeatureImage">
    <item name="android:layout_width">@dimen/featureImageViewWidth</item>
    <item name="android:layout_height">@dimen/featureImageViewHeight</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>
  
  <style name="AuthEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:maxLength">200</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/Black</item>
    <item name="android:textColorHint">@color/Black</item>
    <item name="android:drawablePadding">10dp</item>
    <item name="android:lines">1</item>
    <item name="android:textDirection">locale</item>
    <item name="android:textCursorDrawable">@drawable/edit_text_color_cursor</item>
  </style>
  
  <style name="RegTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="EditContactTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_marginStart">20dp</item>
    <item name="android:layout_marginEnd">20dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">@color/RoyalBlue</item>
  </style>

  <style name="EditContactEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:backgroundTint">@color/Gray</item>
    <item name="android:textColor">@color/Black</item>
  </style>

  <style name="EditContactButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginEnd">15dp</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="FeatureTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:layout_marginStart">70dp</item>
    <item name="android:layout_marginEnd">70dp</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="RegButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:layout_marginStart">15dp</item>
    <item name="android:layout_marginEnd">15dp</item>
  </style>

  <style name="CommentsEditText">
    <item name="android:layout_marginBottom">@dimen/commentMarginBottom</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingStart">15dp</item>
    <item name="android:paddingEnd">15dp</item>
    <item name="android:maxLength">1000</item>
    <item name="android:gravity">start</item>
    <item name="android:textSize">@dimen/EditTextFontSize</item>
    <item name="android:textColor">@color/Black</item>
    <item name="android:textColorHint">@color/Black</item>
    <item name="android:minLines">3</item>
    <item name="android:textDirection">locale</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="PostHeaderElementsStyle" >
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/Black</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="PostHeaderArrowStyle" >
    <item name="android:layout_marginStart">2dp</item>
    <item name="android:layout_marginEnd">-5dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="PostBodyElementsStyle" >
    <item name="android:layout_marginBottom">5dp</item>tv
    <item name="android:textColor">@color/Black</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="PostImageButtonSocialStyle" >
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_width">30dp</item>
    <item name="android:layout_height">30dp</item>
  </style>
  <style name="PostPopupMenu" >
    <item name="android:background">@color/White</item>
    <item name="android:textColor">@color/Black</item>
  </style>

</resources>